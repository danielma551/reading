      // æ­¥éª¤1ï¼šå°†æ–‡æœ¬åˆ†æˆè¾ƒå°çš„å—
      const chunkSize = 100000; // æ¯10ä¸‡å­—ç¬¦ä¸€ä¸ªå—
      const chunks = [];
      for (let i = 0; i < inputText.length; i += chunkSize) {
        chunks.push(inputText.slice(i, i + chunkSize));
