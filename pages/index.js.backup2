          console.log(`æ–‡æœ¬å¤„ç†è¿›åº¦ï¼š${progress}%`);
          
          // å¤„ç†ä¸‹ä¸€å—
          processedChunks++;
          processNextChunk();
        }, 0); // ä½¿ç”¨é›¶å»¶è¿Ÿä¹Ÿå¯ä»¥è®©UIæœ‰æœºä¼šæ›´æ–°
      }
      
      // å¼€å§‹å¤„ç†
